<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Restaurante.gui.guiDoGerente.pedido.TelaPedido"
            prefHeight="400.0" prefWidth="600.0">

    <ImageView fx:id="imgTop" fitHeight="488.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../imagens/telaCardapio.png" />
    </ImageView>


    <Button layoutX="274.0" layoutY="180.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="140.0" text="Deletar pedidos de certa epoca" onAction="#deletarPedidosDeUmaDeterminadaEpoca">
        <font>
            <Font name="Arial Bold" size="18.0" />
        </font>
    </Button>
    <Button  layoutX="204.0" layoutY="244.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="140.0" text="Calcular lucro" onAction="#calcularLucroGeradoPorPedidosEmDetermiadoPeriodoDeTempo">
        <font>
            <Font name="Arial Bold" size="18.0" />
        </font>
    </Button>
    <Button  layoutX="353.0" layoutY="244.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="140.0" text="Listar Pedidos" onAction="#criarListaPedidosDeterminadoPeriodo">
        <font>
            <Font name="Arial Bold" size="18.0" />
        </font>
    </Button>
    <Button layoutX="418.0" layoutY="180.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="140.0" text="Deletar um unico pedido" onAction="#removerUmDeterminadopedido">
        <font>
            <Font name="Arial Bold" size="18.0" />
        </font>
    </Button>
</AnchorPane>
